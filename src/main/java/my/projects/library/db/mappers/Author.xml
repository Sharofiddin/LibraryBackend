<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "/home/sharof/Projects/mybatis/dtd/mybatis-3-mapper.dtd">
<mapper namespace="my.projects.library.db.mappers.Author">
<select id="selectAuthors">
	SELECT id,
		   first_name,
		   last_name
	  FROM author
	  <where>
	  	<if test="id != null">
	  		AND	id = #{id}
	  	</if>
	  	<if test="first_name != null">
	  		AND	first_name = #{first_name}
	  	</if>
	  	<if test="last_name != null">
	  		AND	last_name = #{last_name}
	  	</if>
	  </where> 
</select>

</mapper>